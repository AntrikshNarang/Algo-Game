<%- include('./partials/_header'); %>

<div class="main-bg">

<header class="header-footer header-out">
    <h1 class="title"><span class="serif-title">algo<span class="basic-title">Basic</span></span></h1>
</header>

<div class="login-box">
    <div class="login">
        <h2 class="create-title">CREATE ROOM</h2>
        <hr class="white-hr">
        <form id="playForm" action="/" method="POST">
            <div class="box">
                <label>Username</label>
                <input class="input-box" type="text" name="username" id="username" required>
            </div>
            <div class="box">
                <label>Room Key</label>
                <% if(roomKey === undefined) {%>
                    <input class="input-box" type="text" name="roomKey" id="roomKey" required>
                <% } else { %>
                    <input class="input-box" value="<%= roomKey %>" type="text" name="roomKey" id="roomKey" required>
                <% } %>
            </div>
            <button class="white-button" id="playButton">PLAY</button>
        </form> 

        <% if(alert) {%>
            <div class="full-alert">
                <h4>
                    <span><i class="fa-solid fa-triangle-exclamation" style="color: yellow;"></i></span>
                    &nbsp;&nbsp;<%= alertMsg %>
                </h4>
            </div>
        <% } %>
    </div>
</div>

<footer class="header-footer footer-out">
    <div class="footer-content-wrapper">
        <a href="/howtoplay" target="_blank" class="how-to-link">How To Play?</a>
        <span class="github-link">Contribute to the GitHub Project over <a href="https://github.com/notvalproate/Algo-Game" target="_blank">here!</a></span>
    </div>
</footer>

<script type="module" src="/js/index.js" charset="utf-8"></script>

<%- include('./partials/_footer'); %>